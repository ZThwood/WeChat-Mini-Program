/* pages/find/find.wxss */
page{
  background-color: rgb(212, 192, 192);
}
.container{
  padding: 0;
  width: 100%;
}

.active{
  border-bottom: 2px solid #f21d19;
}



.main{
  background-color: white;
  height: 100%;
  width: 100%;
  border-radius: 54rpx;
}
.main-item{
  margin: 20rpx 0;
  border-bottom: 2rpx solid #ccc;
  display: flex;
  flex-direction: row;
}

.main-item > image{
  border-radius: 20%;
  width: 400rpx;
  height: 222rpx;
  margin: 24rpx ;
}
.main-item > .main-text{
  margin-left: 50rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: space-around;
}

.main-text .name{
  opacity: .5;
  font-size: 24rpx;  
}
.name_warp{
  display: flex;
  justify-content:space-between ;
  align-items: center;
}
.how{
  float: right;
  background-color: #f21d19;
  border-radius: 10rpx;
  margin-right: 20rpx;
  padding: 10rpx;
  color: white;
  font-size: 32rpx;
  margin-bottom: 10rpx;

}