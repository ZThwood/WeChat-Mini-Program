.order-navbar {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  background-color: #f4f4f4;
  box-shadow: 0 10rpx 0rpx 0rpx rgb(248, 160, 160);
}
.order-navbar text {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  padding: 0 30rpx;
  margin: 0 2rpx;
  
}
