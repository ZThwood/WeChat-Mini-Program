.order-navbar .item.active {
  color: red;
  background-color: #fff;
  border-top-right-radius: 10%;
  border-top-left-radius: 10%;
  border-left: 6rpx solid rgb(253, 147, 147);
  border-top: 8rpx solid rgb(255, 58, 58);
  border-bottom: none;
  box-shadow: 6rpx 15rpx 0rpx 0rpx #fff;
  font-weight: bold;
}



